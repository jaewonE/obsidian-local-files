{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES2021", // Modern ES target
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"strict": true, // Enable all strict type-checking options
		"lib": [
			"DOM",
			"ES2021" // Match target
		],
		"types": ["node", "obsidian"]
	},
	"include": ["**/*.ts"]
}
